<views:MvxWpfView 
         xmlns:views="clr-namespace:Cirrious.MvvmCross.Wpf.Views;assembly=Cirrious.MvvmCross.Wpf"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         x:Class="FSharp.ViewModule.Demos.MvvmCross.Wpf.Views.HomeView">
    <StackPanel>
        <TextBlock Text="First Name" />
        <TextBox Text="{Binding FirstName, Mode=TwoWay}" />
        <TextBlock Text="Last Name" />
        <TextBox Text="{Binding LastName, Mode=TwoWay}" />
        <TextBlock Text="Full Name" />
        <TextBlock Text="{Binding fullName, Mode=OneWay}" />
        <Button Content="{Binding ClickCount, Mode=OneWay}" Command="{Binding click}" />
    </StackPanel>
</views:MvxWpfView>